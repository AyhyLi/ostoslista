<!DOCTYPE html>
<html>
    <head> 
        <meta charset="utf-8">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        <title>Ostoslista</title>
    </head>
    <body>
        <div class="container">
            <h1 class="mb-4">Ostoslista <%=tiedot[0].nimi%></h1>
            
            <table class="table table-bordered">
                <tbody>
                    
                    <%tiedot.forEach((tieto)=>{%>
                        <%if(tieto.id == muokattava){%>
                    <tr>
                        <form method="POST" action="/tallennaMuokkaus">
                            <td>
                                <%if(tieto.ostettu == 1){%>
                                    <input type="checkbox" name="ostettu" class="form-control-lg" checked>
                                <%}
                                else{%>
                                    <input type="checkbox" name="ostettu" class="form-control-lg">
                                <%}%>
                            </td>
                            <td class="col-8">
                                <input type="text" name="sisalto" class="form-control float-left" value="<%=tieto.sisalto%>" style="width:80%">
                                <input type="hidden" name="id" value="<%=tieto.id%>">
                                <input type="submit" value="Tallenna" class="btn btn-primary float-right">
                            </td>
                        </form>
                        
                            <td class="col-3">
                                <a href="/lista/<%=tieto.listaId%>" class="btn btn-secondary">Peruuta</a>
                            </td>
                    </tr>
                    <%}
                    else{%>
                        <tr>
                            <td>
                                <%if(tieto.ostettu == 1){%>
                                    <span class="fas fa-check"></span>
                                <%}
                                else{%>
                                    <span class="fas fa-times"></span>
                                <%}%>
                            </td>
                            <td colspan="2">
                                <%=tieto.sisalto%>
                            </td>
                        </tr>
                    <%}});%>
                </tbody>
            </table>
        </div>
    </body>
</html>